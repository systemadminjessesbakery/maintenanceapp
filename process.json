{
    "name": "jesses-bakery-app",
    "script": "server.js",
    "instances": 1,
    "exec_mode": "cluster",
    "watch": ["*.js", "*.html"],
    "ignore_watch": ["node_modules", "tmp"],
    "watch_options": {
        "followSymlinks": false,
        "usePolling": true,
        "interval": 1000
    },
    "env": {
        "NODE_ENV": "production",
        "PORT": 8080
    },
    "max_memory_restart": "1G"
} 