<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <webSocket enabled="false" />
    <handlers>
      <add name="iisnode" path="combined-server.js" verb="*" modules="iisnode"/>
    </handlers>
    <rewrite>
      <rules>
        <rule name="NodeInspector" patternSyntax="ECMAScript" stopProcessing="true">
          <match url="^combined-server.js\/debug[\/]?" />
        </rule>
        <rule name="DynamicContent">
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="True"/>
          </conditions>
          <action type="Rewrite" url="combined-server.js"/>
        </rule>
      </rules>
    </rewrite>
    <security>
      <requestFiltering>
        <hiddenSegments>
          <remove segment="bin"/>
        </hiddenSegments>
      </requestFiltering>
    </security>
    <httpErrors existingResponse="PassThrough" />
    <staticContent>
      <mimeMap fileExtension=".html" mimeType="text/html" />
      <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="0.00:00:00" />
    </staticContent>
  </system.webServer>
  <system.web>
    <compilation debug="true" />
  </system.web>
  <appSettings>
    <add key="NODE_ENV" value="production" />
    <add key="WEBSITE_NODE_DEFAULT_VERSION" value="~18" />
    <add key="SCM_DO_BUILD_DURING_DEPLOYMENT" value="true" />
    <add key="WEBSITE_RUN_FROM_PACKAGE" value="1" />
  </appSettings>
</configuration> 